pipeline {
  agent any
  environment { 
    GITHUB_TOKEN=credentials('github-token')
  }
  stages {
    stage('cleanup') {
      steps {
        sh 'docker system prune -a --volumes --force'
      }
    }
    stage('build image') {
      steps {
        sh 'docker build -t bkumar08/ghcrimage:test .'
      }  
    }
    stage('list image') {
      steps {
        sh 'docker images'
      }
    }
    stage('Login to GHCR') { 
      steps { 
        sh 'echo $GITHUB_TOKEN_PSW | docker login ghcr.io -u $GITHUB_TOKEN_USR --password-stdin'
      }
    }
    stage('Image push') { 
      steps { 
        sh 'docker push bkumar08/ghcrimage:test'
      }
    }
    stage('Delete Image') { 
      steps { 
       sh 'docker rmi -f bkumar08/ghcrimage:test' 
      }
    }
  }
}
